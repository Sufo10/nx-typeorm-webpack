{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // "module": "ESNext",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "module": "ESNext", // or "ES6"
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
